// 1.To find the first h1 element on the main page.

let xpathResult = document.evaluate("//h1", document, null, XPathResult.FIRST_ORDERED_NODE_TYPE, null).singleNodeValue;
console.log(xpathResult);

// 2. Find all images that have the 'alt' attribute. Output the message in the console "Found (number) images with the alt attribute."

let allImages = document.evaluate("//img[@alt]", document, null, XPathResult.ORDERED_NODE_SNAPSHOT_TYPE, null);
console.log("Found "+ allImages.snapshotLength + " images with the alt attribute.");

// 3. Find the button element with the text "Start forming a habit!". If an element with such text is not found, display a corresponding message. Output the message with numbers of buttons in the console.

let button = document.evaluate("//button[contains(text(), 'Start forming a habit!')]", document, null, XPathResult.ORDERED_NODE_SNAPSHOT_TYPE, null);
if (button.snapshotLength > 0) {
    console.log("Found "+ button.snapshotLength + " buttons.");
} else {
    console.log("No buttons found.");
}

// 4. Validate the presence and visibility of the site search icon on the webpage, and ensure the image associated with the search icon has the appropriate alt text and a source (src) path.

let searchIcon = document.evaluate("//li[@role='search']", document, null, XPathResult.FIRST_ORDERED_NODE_TYPE, null).singleNodeValue; 
console.log(getComputedStyle(searchIcon).visibility);

// 5. Log into your profile at https://www.greencity.cx.ua/#/profile. At the bottom of the page, there are checkboxes. Find them, check their state (checked or not), and display a message about the number of checked and unchecked checkboxes.

let checkBoxesSnapshot = document.evaluate("//input[@type='checkbox']", document, null, XPathResult.ORDERED_NODE_SNAPSHOT_TYPE, null);
let checkBoxesArray = [];
for (let i = 0; i < checkBoxesSnapshot.snapshotLength; i++) {
    checkBoxesArray.push(checkBoxesSnapshot.snapshotItem(i));
}
let numberOfChecked = 0;
let numberOfUnchecked = 0;



for (let i = 0; i < checkBoxesArray.length; i++) {
  if(checkBoxesArray[i].state === 'checked' ) {
   numberOfChecked++;
  } else {
      numberOfUnchecked++;
  }
}
console.log(numberOfChecked);
console.log(numberOfUnchecked);
