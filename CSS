//1. Find all images on the page. 

var images = document.querySelectorAll('img');
console.log(images.length ? `${images.length} are found` : 'Not found');

//2. Find images that are icons on the web.

var icons = document.querySelectorAll('img[src*="icon"]');
console.log(icons.length ? `${icons.length} icons are found` : 'Icons are not found');

//3. Find all button elements present on a specified web page (output textcontent of buttons)

var buttons = document.querySelectorAll('button');
console.log(buttons.length ? `${buttons.length} buttons are found` : 'Icons are not found');

for (var i = 0; i < buttons.length; i++) {
    console.log(buttons[i].textContent);
}

//4. Find all input fields on a web page (output placeholder)

var inputs = document.querySelectorAll('input');
console.log(inputs.length ? `${inputs.length} inputs are found` : 'Inputs are not found');

for (var i = 0; i < inputs.length; i++) {
    console.log(inputs[i].placeholder);
}

//5. 5. Find the link that is responsible for going to the map to find a place to buy eco-bags.

const element = document.querySelector('a.tertiary-global-button.btn-link:nth-of-type(1)');
console.log(element);
